.row
  .col-xl-3.card-col
    .card
      .card-block
        = link_to new_backend_schoolyear_path, class: 'btn btn-lg btn-block btn-primary-outline' do
          = t('helpers.submit.new', model: Bs::Schoolyear.model_name.human)
    .card
      .card-header
        = t('helpers.label.filter')
      .card-block
  .col-xl-9.card-col
    .card
      .card-header
        = t('backend.schoolyears.schoolyear_list')
      %table.table.table-sm.table-striped
        %thead
          %tr
            %th= Bs::Schoolyear.human_attribute_name(:name)
            %th= Bs::Schoolyear.human_attribute_name(:status)
            %th= Bs::Schoolyear.human_attribute_name(:start_date)
            %th= Bs::Schoolyear.human_attribute_name(:end_date)
        %tbody
          - @schoolyears.each do |schoolyear|
            %tr
              %td= schoolyear.name
              %td= t("activerecord.attributes.bs/schoolyear.statuses.#{schoolyear.status}")
              %td= schoolyear.start_date
              %td= schoolyear.end_date
              %td
                - dropdownId = "schoolyear_actions_#{schoolyear.id}"
                = dropdown_config_toggle(dropdownId) do
                  - if policy(:backend).edit?
                    = link_to edit_backend_schoolyear_path(schoolyear), class: 'dropdown-item' do
                      = t('helpers.submit.edit', model: model_human)
                  - if policy(:backend).destroy?
                    = link_to backend_schoolyear_path(schoolyear), method: :delete, class: 'dropdown-item text-danger' do
                      = t('helpers.submit.delete', model: model_human)

      - if @schoolyears.total_pages > 1
        .card-footer
          .text-center
            = paginate @schoolyears
